<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color of the search bar -->
    <solid android:color="#FFFFFF"/> <!-- White background -->

    <!-- Border (optional) -->
    <stroke
        android:width="1dp"
        android:color="#E0E0E0"/> <!-- Light grey border -->

    <!-- Rounded corners for the search bar -->
    <corners android:radius="8dp"/> <!-- Adjust radius for rounding -->

    <!-- Padding inside the search bar -->
    <padding
        android:left="8dp"
        android:right="8dp"/>
</shape>
